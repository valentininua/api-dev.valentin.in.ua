    "paths": {
        "/api/ping": {
            "get": {
                "tags": [
                    "System"
                ],
                "summary": "Ping API",
                "description": "Проверка доступности API",
                "operationId": "ping",
                "responses": {
                    "200": {
                        "description": "API доступен",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "pong": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "example": "2025-12-30T00:00:00.000000Z"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Список продуктів з фільтрами, пагінацією",
                "operationId": "getProducts",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Номер сторінки",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 1
                        }
                    },
                    {
                        "name": "limit",
                        "in": "query",
                        "description": "Кількість елементів на сторінці",
                        "required": false,
                        "schema": {
                            "type": "integer",
                            "default": 10
                        }
                    },
                    {
                        "name": "category",
                        "in": "query",
                        "description": "Фільтр по категорії",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Список продуктів",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "data": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "iPhone 15 Pro"
                                                    },
                                                    "slug": {
                                                        "type": "string",
                                                        "example": "iphone-15-pro"
                                                    },
                                                    "description": {
                                                        "type": "string",
                                                        "example": "Latest iPhone with advanced features"
                                                    },
                                                    "price": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 999.99
                                                    },
                                                    "category_id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "category_name": {
                                                        "type": "string",
                                                        "example": "Smartphones"
                                                    },
                                                    "image": {
                                                        "type": "string",
                                                        "example": "https://example.com/images/iphone15pro.jpg"
                                                    },
                                                    "stock": {
                                                        "type": "integer",
                                                        "example": 25
                                                    },
                                                    "rating": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 4.8
                                                    },
                                                    "reviews_count": {
                                                        "type": "integer",
                                                        "example": 156
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "meta": {
                                            "properties": {
                                                "current_page": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "last_page": {
                                                    "type": "integer",
                                                    "example": 5
                                                },
                                                "per_page": {
                                                    "type": "integer",
                                                    "example": 10
                                                },
                                                "total": {
                                                    "type": "integer",
                                                    "example": 50
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/products/{id}": {
            "get": {
                "tags": [
                    "Products"
                ],
                "summary": "Деталі окремого продукту",
                "operationId": "getProduct",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID продукту",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Деталі продукту",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "name": {
                                            "type": "string",
                                            "example": "iPhone 15 Pro"
                                        },
                                        "slug": {
                                            "type": "string",
                                            "example": "iphone-15-pro"
                                        },
                                        "description": {
                                            "type": "string",
                                            "example": "Latest iPhone with advanced features, A17 Pro chip, titanium design"
                                        },
                                        "short_description": {
                                            "type": "string",
                                            "example": "Premium smartphone with professional features"
                                        },
                                        "price": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 999.99
                                        },
                                        "old_price": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 1099.99
                                        },
                                        "category_id": {
                                            "type": "integer",
                                            "example": 1
                                        },
                                        "category_name": {
                                            "type": "string",
                                            "example": "Smartphones"
                                        },
                                        "brand": {
                                            "type": "string",
                                            "example": "Apple"
                                        },
                                        "sku": {
                                            "type": "string",
                                            "example": "IP15P256BT"
                                        },
                                        "images": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            }
                                        },
                                        "attributes": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "name": {
                                                        "type": "string",
                                                        "example": "Color"
                                                    },
                                                    "value": {
                                                        "type": "string",
                                                        "example": "Space Black"
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "stock": {
                                            "type": "integer",
                                            "example": 25
                                        },
                                        "rating": {
                                            "type": "number",
                                            "format": "float",
                                            "example": 4.8
                                        },
                                        "reviews_count": {
                                            "type": "integer",
                                            "example": 156
                                        },
                                        "is_featured": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "is_available": {
                                            "type": "boolean",
                                            "example": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Продукт не знайдено"
                    }
                }
            }
        },
        "/api/categories": {
            "get": {
                "tags": [
                    "Categories"
                ],
                "summary": "Дерево категорій",
                "operationId": "getCategories",
                "responses": {
                    "200": {
                        "description": "Дерево категорій",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "properties": {
                                            "id": {
                                                "type": "integer",
                                                "example": 1
                                            },
                                            "name": {
                                                "type": "string",
                                                "example": "Electronics"
                                            },
                                            "slug": {
                                                "type": "string",
                                                "example": "electronics"
                                            },
                                            "description": {
                                                "type": "string",
                                                "example": "Electronic devices and accessories"
                                            },
                                            "image": {
                                                "type": "string",
                                                "example": "https://example.com/images/electronics.jpg"
                                            },
                                            "product_count": {
                                                "type": "integer",
                                                "example": 156
                                            },
                                            "children": {
                                                "type": "array",
                                                "items": {
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "type": "object"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/cart": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Операції з кошиком (додати, оновити, видалити)",
                "operationId": "cartOperations",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "action": {
                                        "type": "string",
                                        "enum": [
                                            "add",
                                            "update",
                                            "remove",
                                            "clear"
                                        ]
                                    },
                                    "product_id": {
                                        "type": "integer"
                                    },
                                    "quantity": {
                                        "type": "integer"
                                    },
                                    "variant_id": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Стан кошика",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "items": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "product_id": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "product_name": {
                                                        "type": "string",
                                                        "example": "iPhone 15 Pro"
                                                    },
                                                    "product_slug": {
                                                        "type": "string",
                                                        "example": "iphone-15-pro"
                                                    },
                                                    "image": {
                                                        "type": "string",
                                                        "example": "https://example.com/images/iphone15pro.jpg"
                                                    },
                                                    "price": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 999.99
                                                    },
                                                    "quantity": {
                                                        "type": "integer",
                                                        "example": 1
                                                    },
                                                    "total": {
                                                        "type": "number",
                                                        "format": "float",
                                                        "example": 999.99
                                                    }
                                                },
                                                "type": "object"
                                            }
                                        },
                                        "summary": {
                                            "properties": {
                                                "items_count": {
                                                    "type": "integer",
                                                    "example": 3
                                                },
                                                "subtotal": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 1499.97
                                                },
                                                "tax": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 299.99
                                                },
                                                "shipping": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 0
                                                },
                                                "discount": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 50
                                                },
                                                "total": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 1749.96
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/orders": {
            "post": {
                "tags": [
                    "Orders"
                ],
                "summary": "Створення замовлення, отримання історії",
                "operationId": "orderOperations",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "action": {
                                        "type": "string",
                                        "enum": [
                                            "create",
                                            "list"
                                        ]
                                    },
                                    "items": {
                                        "type": "array",
                                        "items": {
                                            "type": "object"
                                        }
                                    },
                                    "shipping_address": {
                                        "type": "object"
                                    },
                                    "billing_address": {
                                        "type": "object"
                                    },
                                    "payment_method": {
                                        "type": "string"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Результат операції з замовленням",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "oneOf": [
                                        {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 12345
                                                },
                                                "order_number": {
                                                    "type": "string",
                                                    "example": "ORD-2025-12345"
                                                },
                                                "status": {
                                                    "type": "string",
                                                    "example": "pending"
                                                },
                                                "status_name": {
                                                    "type": "string",
                                                    "example": "Pending Payment"
                                                },
                                                "total": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 1214.98
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "example": "2025-12-30T00:00:00.000000Z"
                                                }
                                            },
                                            "type": "object"
                                        },
                                        {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "tags": [
                    "User"
